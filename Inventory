[k8s-master]
192.168.5.39

[k8s-master:vars]
ansible_user=cc
ansible_connection=ssh
ansible_ssh_private_key_file=~/.ssh/team22-key.pem
ansible_ssh_common_args='-i ~/.ssh/F24_BASTION.pem -o StrictHostKeyChecking=no -o ProxyCommand="ssh -W %h:%p cc@bastion1"'

[CloudVMs]
